<%# path: app/views/shopping_lists/index.html.erb %>

<h1>Shopping List</h1>

<p>Amount of items to buy: <%= @shopping_list[:total_items] %></p>
<p>Total Value of food needed: $ <%= @shopping_list[:total_value] %></p>

<table>
  <thead>
    <tr>
      <th>Food</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% @shopping_list[:shopping_list].each do |food_name, data| %>
      <tr>
        <td><%= food_name %></td>        
        <td><%= data[:quantity] %></td>
        <td>$<%= data[:price] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
