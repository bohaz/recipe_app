<%# path: app/views/shopping_lists/index.html.erb %>

<h1>Shopping List</h1>

<p class="amount-of-items">Amount of items to buy: <%= @shopping_list[:total_items] %></p>
<p class="total-value">Total Value of food needed: $ <%= @shopping_list[:total_value] %></p>

<table>
  <thead>
    <tr class="tr-head">
      <th>Food</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% @shopping_list[:shopping_list].each do |food_name, data| %>
      <tr class="tr-list">
        <td class="food-name"><%= food_name %></td>        
        <td class="food-quantity"><%= data[:quantity] %></td>
        <td class="food-price">$<%= data[:price] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
