<%# path: app/views/recipes/new.html.erb %>

<h1>Add New Recipe</h1>

<%= form_for @recipe do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :preparation_time %>
    <%= f.number_field :preparation_time, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :cooking_time %>
    <%= f.number_field :cooking_time, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :public %>
    <%= f.check_box :public, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit "Add Recipe", class: "btn btn-primary" %>
  </div>
<% end %>
