<%# path: app/views/recipes/index.html.erb %>

<h1>My recipies</h1>
<%= link_to "Add New Recipe", new_recipe_path, class: "btn btn-primary" %>
<ul>
  <% @recipes.each do |recipe| %>
    <li>
      <%= link_to recipe.name, recipe_path(recipe) %> 
      <% if recipe.user == current_user %>
        <%= button_to 'Remove', recipe_path(recipe), method: :delete, data: { confirm: 'Â¿Are you sure you want to delete this recipe?' } %>
      <% end %>
      <p><%= recipe.description %></p>
    </li>
  <% end %>
</ul>
