<%# path: app/views/foods/index.html.erb %>

 <h2 class="h2">List of foods of the user: </h2>
 <p class="p-user-name"> Name: <%= @user.name %> ID: <%= @user.id %>  </p>

<%= link_to 'Add Food', new_food_path, class:"btn" %>
<% if @foods.size > 0%>
  <table>
    <thead>
      <tr class="tr-head">
        <th>Food</th>
        <th>Quantity</th>
        <th>Measurement unit</th>
        <th>Unit price</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @foods.each do |food| %>
        <tr class="tr-list">
          <td class="food-name"><%= food.name %></td>
          <td class="food-quantity"><%= food.quantity %></td>
          <td class="food-measurement-unit"><%= food.measurement_unit %></td>
          <td class="food-price">$ <%= food.price %></td>
          <td>
            <%= form_for food, method: :delete, url: food_path(food) do |f| %>
              <%= f.submit "Delete", class:"btn" %>
            <% end %>
          </td>            
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p class="p-no-foods">There are no foods</p>
<% end %>
